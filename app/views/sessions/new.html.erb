<%  title = t "login.title"
    provide(:title, title) 
%>
<h1><%= t "login.title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password %>
      <%= link_to t("reset_password.link_forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
        <span> <%= t "login.remember_me" %> </span>
      <% end %>
      <%= f.submit t("login.btn_login"), class: "btn btn-primary" %>
    <% end %>
    <p> <%= t "login.title_link_sign_up" %> <%= link_to t("login.link_sign_up"), signup_path %></p>
  </div>
</div>
