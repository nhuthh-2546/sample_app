<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header.link_root"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.link_home"), root_path %></li>
        <li><%= link_to t("header.link_help"), help_path %></li>
        <% if logged_in? %>
          <li> <%= link_to t("header.link_user"), users_path %> </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "header.title_account" %> <b class="caret"></b> 
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.link_profile"), current_user %></li>
              <li><%= link_to t("header.link_setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("header.link_log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.link_login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
